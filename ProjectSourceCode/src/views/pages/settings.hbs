{{>nav}}
<div class="settings-page">
    <h2 class="settings-title">Settings</h2>

    <!-- Group Info -->
    <div class="group-info">
        <p><strong>Group Name:</strong> {{group_name}}</p>
        <p><strong>Group Code:</strong> {{group_code}}</p>  <!-- Updated to show Group Code -->
    </div>

    <!-- Group Members & Completed Tasks -->
    <div class="group-members">
        <h3>Group Members & Completed Tasks</h3>
        <ul>
            {{#each group_members}}
            <li>
                <span class="member-name">{{this.username}}</span> - 
                <span class="completed-tasks">{{this.completed_tasks}} tasks completed</span>
            </li>
            {{/each}}
        </ul>
    </div>

    <!-- Your Completed Tasks -->
    <div class="your-tasks">
        <h3>Your Completed Tasks</h3>
        <p><strong>{{your_username}}</strong>: {{your_completed_tasks}} tasks completed</p>
    </div>

    <!-- Logout Button -->
    <div class="logout-container">
        <a href="/logout" class="logout-button">Logout</a>
    </div>
</div>
