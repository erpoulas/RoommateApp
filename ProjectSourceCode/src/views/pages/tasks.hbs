<div class="tasks-page">
  <!-- Header -->
  <div class="tasks-header">
    <h1><span class="add-task-icon" onclick="toggleTaskForm()">‚ûï</span> ADD TASKS</h1>
    <span class="settings-icon">‚öôÔ∏è</span>
  </div>

  <!-- Add Task Form (Initially Hidden) -->
  <div id="taskForm" class="add-task-form hidden">
    <input type="text" id="taskNameInput" placeholder="Enter a task">
    <button onclick="addTask()">Add Task</button>
  </div>

  <!-- "Up for Grabs" (Unassigned Tasks) -->
  <div class="task-section">
    <h2>UP FOR GRABS</h2>
    <div class="task-list">
      {{#each tasks}}
        {{#unless assigned_user}} <!-- Only show unassigned tasks -->
          <div class="task-item">
            <span class="user-icon">A</span>
            <span class="task-name">{{task_name}}</span>
            <input type="checkbox" disabled> <!-- Checkbox but disabled -->
          </div>
        {{/unless}}
      {{/each}}
    </div>
  </div>

  <!-- Daily Tasks -->
  <div class="task-section">
    <h2>DAILY <span class="add-task" onclick="toggleTaskForm()">‚ûï</span></h2>
    <button class="randomize-button" onclick="randomizeTasks()">RANDOMIZE</button>
    <div class="task-list">
      {{#each tasks}}
        {{#if (eq frequency 'daily')}}
          <div class="task-item">
            <span class="user-icon">{{assigned_user.[0]}}</span>
            <span class="task-name">{{task_name}}</span>
            <input type="checkbox" onclick="completeTask({{id}})">
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>

  <!-- Weekly Tasks -->
  <div class="task-section">
    <h2>WEEKLY <span class="add-task" onclick="toggleTaskForm()">‚ûï</span></h2>
    <button class="randomize-button" onclick="randomizeTasks()">RANDOMIZE</button>
    <div class="task-list">
      {{#each tasks}}
        {{#if (eq frequency 'weekly')}}
          <div class="task-item">
            <span class="user-icon">{{assigned_user.[0]}}</span>
            <span class="task-name">{{task_name}}</span>
            <input type="checkbox" onclick="completeTask({{id}})">
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>

  <!-- Monthly Tasks -->
  <div class="task-section">
    <h2>MONTHLY <span class="add-task" onclick="toggleTaskForm()">‚ûï</span></h2>
    <button class="randomize-button" onclick="randomizeTasks()">RANDOMIZE</button>
    <div class="task-list">
      {{#each tasks}}
        {{#if (eq frequency 'monthly')}}
          <div class="task-item">
            <span class="user-icon">{{assigned_user.[0]}}</span>
            <span class="task-name">{{task_name}}</span>
            <input type="checkbox" onclick="completeTask({{id}})">
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<script>
  function addTask() {
    const taskName = document.getElementById("taskNameInput").value;

    if (!taskName.trim()) {
      alert("Please enter a task name!");
      return;
    }

    fetch('/add-task', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ taskName })
    }).then(() => location.reload());
  }

  function toggleTaskForm() {
    console.log("üü¢ toggleTaskForm() function was called!");

    const form = document.getElementById("taskForm");

    if (!form) {
        console.error("‚ùå ERROR: Element with ID 'taskForm' not found!");
        return;
    }

    console.log("üîÑ Toggling visibility...");
    form.classList.toggle("hidden");
  }

  document.addEventListener("DOMContentLoaded", function() {
    console.log("‚úÖ JavaScript is loaded!");
  });

</script>
