<div class="tasks-page">
  <!-- Header -->
  <div class="tasks-header">
    <h1><span class="add-task-icon">➕</span> ADD TASKS</h1>
    <span class="settings-icon">⚙️</span>
  </div>

  <!-- "Up for Grabs" (Unassigned Tasks) -->
  <div class="task-section">
    <h2>UP FOR GRABS</h2>
    <div class="task-list">
      {{#each tasks}}
        {{#unless assigned_user}} <!-- Only show unassigned tasks -->
          <div class="task-item">
            <span class="user-icon">A</span>
            <span class="task-name">{{task_name}}</span>
            <input type="checkbox" disabled> <!-- Checkbox but disabled -->
          </div>
        {{/unless}}
      {{/each}}
    </div>
  </div>

  <!-- Daily Tasks -->
  <div class="task-section">
    <h2>DAILY <span class="add-task">➕</span></h2>
    <button class="randomize-button" onclick="randomizeTasks()">RANDOMIZE</button>
    <div class="task-list">
      {{#each tasks}}
        {{#if (eq frequency 'daily')}}
          <div class="task-item">
            <span class="user-icon">{{assigned_user.[0]}}</span>
            <span class="task-name">{{task_name}}</span>
            <input type="checkbox" onclick="completeTask({{id}})">
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>

  <!-- Weekly Tasks -->
  <div class="task-section">
    <h2>WEEKLY <span class="add-task">➕</span></h2>
    <div class="task-list">
      {{#each tasks}}
        {{#if (eq frequency 'weekly')}}
          <div class="task-item">
            <span class="user-icon">{{assigned_user.[0]}}</span>
            <span class="task-name">{{task_name}}</span>
            <input type="checkbox" onclick="completeTask({{id}})">
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>

  <!-- Monthly Tasks -->
  <div class="task-section">
    <h2>MONTHLY <span class="add-task">➕</span></h2>
    <div class="task-list">
      {{#each tasks}}
        {{#if (eq frequency 'monthly')}}
          <div class="task-item">
            <span class="user-icon">{{assigned_user.[0]}}</span>
            <span class="task-name">{{task_name}}</span>
            <input type="checkbox" onclick="completeTask({{id}})">
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<script>
  function completeTask(taskId) {
    fetch(`/complete-task/${taskId}`, { method: 'POST' })
      .then(() => location.reload());
  }

  function randomizeTasks() {
    fetch('/random-assign-tasks', { method: 'POST' })
      .then(() => location.reload());
  }
</script>
